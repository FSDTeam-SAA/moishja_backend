              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/6604fc41213448d394db854a",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "6604fc41213448d394db854a"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "description": "Delete a user by ID",
            "url": {
              "raw": "{{base_url}}/api/v1/user/6604fc41213448d394db854a",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "6604fc41213448d394db854a"]
            }
          }
        },
        {
          "name": "Upload Avatar",
          "request": {
            "method": "POST",
            "description": "Upload a user's avatar image",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "id",
                  "value": "6604fc41213448d394db854a",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/your/avatar.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/user/upload-avatar",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "upload-avatar"]
            }
          }
        }
      ]
    }
