        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "description": "Fetch a single user by ID",
            "url": {
              "raw": "{{base_url}}/api/v1/user/6604fc41213448d394db854a",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "user", "6604fc41213448d394db854a"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "description": "Update a user's details",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Updated\",\n  \"lastName\": \"Name\",\n  \"email\": \"updated@example.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
