            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshTokenBody\": \"<paste_your_refresh_token_here>\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "refresh-token"]
            }
          }
        },
